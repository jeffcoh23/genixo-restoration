<h2 style="margin: 0 0 16px 0; font-size: 18px; font-weight: 600; color: #1a2b33;">Daily Activity Summary</h2>

<p style="margin: 0 0 16px 0; font-size: 14px; color: #3d5361; line-height: 1.5;">
  Hi <%= @user.first_name %>, here's what happened on <strong><%= @date_label %></strong> across your incidents.
</p>

<% @summaries.each do |summary| %>
  <table style="width: 100%; border-collapse: collapse; margin: 0 0 16px 0; border: 1px solid #e2e8ec; border-radius: 4px;">
    <tr>
      <td style="padding: 12px; background-color: #f0f4f5;">
        <strong style="font-size: 14px; color: #1a2b33;"><%= summary[:property_name] %></strong>
        <span style="font-size: 12px; color: #8899a4; margin-left: 8px;"><%= summary[:organization_name] %></span>
        <span style="font-size: 12px; color: #8899a4; margin-left: 8px;">&middot; <%= summary[:status_label] %></span>
      </td>
    </tr>
    <tr>
      <td style="padding: 12px;">
        <table style="width: 100%; border-collapse: collapse;">
          <% if summary[:new_messages] > 0 %>
            <tr>
              <td style="padding: 4px 0; font-size: 13px; color: #3d5361;">
                <%= pluralize(summary[:new_messages], "new message") %>
              </td>
            </tr>
          <% end %>
          <% if summary[:new_activity_events] > 0 %>
            <tr>
              <td style="padding: 4px 0; font-size: 13px; color: #3d5361;">
                <%= pluralize(summary[:new_activity_events], "activity event") %>
              </td>
            </tr>
          <% end %>
          <% if summary[:new_labor_entries] > 0 %>
            <tr>
              <td style="padding: 4px 0; font-size: 13px; color: #3d5361;">
                <%= pluralize(summary[:new_labor_entries], "labor entry", "labor entries") %>
              </td>
            </tr>
          <% end %>
          <% if summary[:new_equipment_entries] > 0 %>
            <tr>
              <td style="padding: 4px 0; font-size: 13px; color: #3d5361;">
                <%= pluralize(summary[:new_equipment_entries], "equipment entry", "equipment entries") %>
              </td>
            </tr>
          <% end %>
        </table>
      </td>
    </tr>
  </table>
<% end %>

<p style="margin: 16px 0 0 0; font-size: 12px; color: #8899a4;">
  You can change this setting in your account preferences.
</p>
